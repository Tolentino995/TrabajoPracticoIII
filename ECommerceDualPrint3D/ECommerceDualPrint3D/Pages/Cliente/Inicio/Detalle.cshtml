@page
@model ECommerceDualPrint3D.Pages.Cliente.Inicio.DetalleModel
@{
}

<div class="container mt-5">
    <form method="POST">
        <input type="hidden" asp-for="CarritoCompra.ProductoId"/>
        <input type="hidden" asp-for="CarritoCompra.ApplicationUserId"/>

        <div class="row">
            <!--Imagen del producto-->
            <div class="col-md-6">
                <img src="@Url.Content($"~/productos/{Model.CarritoCompra.Producto.Imagen}")"
                     alt="@Model.CarritoCompra.Producto.Nombre"
                     class="card-img-top w-100 h-100"/>
            </div>

            <!-- Detalles del producto-->
            <div class="col-md-6">
                <h1 class="display-5">@Model.CarritoCompra.Producto.Nombre</h1>
                <p class="text-muted"<strong>Categoría:</strong> @Model.CarritoCompra.Producto.Categoria.Nombre</p>
                <p class="text-muted"<strong>Descripción:</strong> @Model.CarritoCompra.Producto.Descripcion</p>
                <p class="text-muted"<strong>Precio:</strong> $ @Model.CarritoCompra.Producto.Precio</p>
                <p>@Model.CarritoCompra.Producto.Descripcion</p>
                <p><strong>Cantidad disponible:</strong> @Model.CarritoCompra.Producto.CantidadDisponible</p>

                
                    <div class="mb-3">
                        <label for="Cantidad" class="form-label">Cantidad</label>
                        <input type="number" id="Cantidad"
                            asp-for="CarritoCompra.Cantidad"
                            class="form-control"
                               min="1" 
                             value="1"/>
                        <span asp-validation-for="CarritoCompra.Cantidad" class="text-danger"></span>
                    </div>

                    <!--Botones-->
                    <div class="d-flex gap-2">
                       <a asp-page="/Cliente/Inicio/Index" class="btn btn-success mt-auto w-50">Regresar</a>
                       <button type="submit" class="btn btn-dark w-50"><i class="fa-solid fa-cart-shopping"></i>  Agregar al Carrito</button>
                    </div>
               
            </div>
        </div>
    </form>
</div>