@page
@model ECommerceDualPrint3D.Pages.Admin.Productos.DetalleModel
@{
    ViewData["Title"] = "Detalle de producto";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4>Detalle de Producto </h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@Model.Producto.Nombre</dd>

                <dt class="col-sm-3">Descripcion</dt>
                <dd class="col-sm-9">@Model.Producto.Descripcion</dd>

                <dt class="col-sm-3">Precio</dt>
                <dd class="col-sm-9">@Model.Producto.Precio</dd>

                <dt class="col-sm-3">Cantidad Disponible</dt>
                <dd class="col-sm-9">@Model.Producto.CantidadDisponible</dd>

                <dt class="col-sm-3">Fecha de Creación</dt>
                <dd class="col-sm-9">@Model.Producto.FechaCreacion.ToString("dd/MM/yyyy")</dd>

                @if (!string.IsNullOrEmpty(Model.Producto.Imagen))
                {
                    <div class="mb-3">
                        <img src="~/productos/@Model.Producto.Imagen" alt="@Model.Producto.Nombre" class="img-thumbnail" style="max-width: 200px" />
                    </div>
                }
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-page="Index" class="btn btn-secondary">
                <i class="fa fa-arrow-left"></i> Regresar
            </a>
        </div>
    </div>
</div>